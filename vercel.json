{
  "version": 2,
  "github": {
    "enabled": true
  },
  "buildCommand": "npx nx build frontend --prod && npx nx serve backend --prod",
  "framework": null,
  "builds": [
    {
      "src": "app/backend/src/main.ts",
      "use": "@vercel/node"
    },
    {
      "src": "dist/apps/frontend/*",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/backend/src/main.ts",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"]
    }
  ]
}
